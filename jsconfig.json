{
  "exclude": ["node_modules", "dist", ".build", ".dev"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": false,
    "baseUrl": ".",
    "paths": {
      "client/*": ["./src/client/*"],
      "server/*": ["./src/server/*"],
      "shared/*": ["./src/shared/*"],
      "assets/*": ["./src/assets/*"],
      "config/*": ["./config/*"],
      "test-utils": ["./src/shared/utils/test-utils.js"]
    }
  }
}
